<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apply for loan"
        android:gravity="center"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:padding="10dp"
        android:textColor="@color/color_blue"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOAN AMOUNT *"
        android:textColor="#000000"
        android:layout_marginTop="24dp"
        android:layout_marginStart="8dp"
        />


    <com.warkiz.widget.IndicatorSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isb_max="500000"
        app:isb_min="1000"
        android:layout_marginTop="8dp"
        app:isb_ticks_count="2"
        app:isb_show_tick_texts="true"
        app:isb_tick_texts_size="15sp"
        app:isb_tick_texts_color="@color/colorPrimaryDark"
        app:isb_thumb_size="20dp"
        app:isb_thumb_color="@color/color_blue"
        app:isb_track_background_color="@color/color_gray"
        app:isb_track_progress_color="@color/colorPrimaryDark"
        app:isb_show_indicator="rounded_rectangle"
        app:isb_indicator_text_size="18sp"
        app:isb_track_background_size="2dp"
        app:isb_track_progress_size="4dp"
        app:isb_only_thumb_draggable="false"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>