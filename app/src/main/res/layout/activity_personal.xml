<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".Personal">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:titleTextColor="#ffffff"
        app:title="Provide Personal Details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAME *"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:hint="tap to enter"
                android:padding="10dp"
                android:id="@+id/name"
                android:inputType="textPersonName"
                android:background="@drawable/blue_stroke_round"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D.O.B. *"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:hint="tap to enter"
                android:padding="10dp"
                android:inputType="textPersonName"
                android:background="@drawable/blue_stroke_round"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FATHER'S NAME *"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:hint="tap to enter"
                android:padding="10dp"
                android:inputType="textPersonName"
                android:background="@drawable/blue_stroke_round"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MOTHER'S NAME *"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:hint="tap to enter"
                android:padding="10dp"
                android:inputType="textPersonName"
                android:background="@drawable/blue_stroke_round"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADDRESS *"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:hint="tap to enter"
                android:lines="2"
                android:padding="10dp"
                android:gravity="start"
                android:background="@drawable/blue_stroke_round"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YOUR INCOME *"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:hint="tap to enter"
                android:padding="10dp"
                android:inputType="textPersonName"
                android:background="@drawable/blue_stroke_round"
                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REFERENCE 1 *"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:hint="tap to enter"
                android:padding="10dp"
                android:inputType="textPersonName"
                android:background="@drawable/blue_stroke_round"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REFERENCE 2 *"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:hint="tap to enter"
                android:padding="10dp"
                android:inputType="textPersonName"
                android:background="@drawable/blue_stroke_round"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NEXT"
                android:minWidth="0dp"
                android:id="@+id/submit"
                android:minHeight="0dp"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:paddingEnd="20dp"
                android:paddingBottom="10dp"
                android:textColor="#ffffff"
                android:background="@drawable/accent_back_round"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="24dp"
                />
        </LinearLayout>




    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>